@model SchoolEMS.Models.Attendance

@{
    ViewBag.Title = "Attendance";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>Upload Attendance Image</h2>
            </div>
            <div class="body">
                @using (Html.BeginForm("Attendance", "Admin", FormMethod.Post, new { @class = "Form-Group", enctype = "multipart/form-data" }))
                {
                    <div class="row clearfix">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="card">
                                <div class="body">
                                    <div class="row clearfix">
                                        <div class="col-sm-12">
                                            <div class="form-group">
                                                <div class="form-line">
                                                    @Html.DropDownListFor(a => a.attendanceTypeId, null, "Choose Attendance Type", new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(a => a.attendanceTypeId, null, new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-12">
                                            <div class="form-group form-float">
                                                <div class="form-line">
                                                    @Html.TextBoxFor(a => a.attendanceFile, null, new {name = "image", type = "file" }) <br />
                                                    @Html.ValidationMessageFor(a => a.attendanceFile, null, new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <center>
                                        <input class="btn bg-grey btn-lg btn-block waves-effect" type="submit" value="Save">
                                    </center>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
