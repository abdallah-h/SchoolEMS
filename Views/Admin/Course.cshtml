@model SchoolEMS.Models.Course

@{
    ViewBag.Title = "Course";
}


<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <center>
                <a class="btn btn-primary btn-lg btn-block " href="~/Course" >Go to Course JTable View</a>
            </center>
            <div class="header">
                <h2>Add New Course</h2>
            </div>
            <div class="body">
                @using (Html.BeginForm("Course", "Admin", FormMethod.Post, new { @class = "Form-Group" }))
                {
                    <div class="row clearfix">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="card">
                                <div class="body">
                                    <div class="row clearfix">
                                        <div class="col-sm-12">
                                            <div class="form-group form-float">
                                                <div class="form-line">
                                                    @Html.DropDownListFor(a => a.semesterId, null, "Choose Semester", new { @id = "id", @class = "form-control" })
                                                    @Html.ValidationMessageFor(a => a.semesterId, null, new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-12">
                                            <div class="form-group form-float">
                                                <div class="form-line">
                                                    @Html.LabelFor(n => n.name, "Name", new { @class = "form-label" })
                                                    @Html.TextBoxFor(n => n.name, new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(a => a.name, null, new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-12">
                                            <div class="form-group form-float">
                                                <div class="form-line">
                                                    @Html.LabelFor(n => n.courseCode, "Course Code", new { @class = "form-label" })
                                                    @Html.TextBoxFor(n => n.courseCode, new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(a => a.courseCode, null, new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <center>
                        <input class="btn bg-grey btn-lg btn-block waves-effect" type="submit" value="Save">
                    </center>
                }
            </div>
        </div>
    </div>
</div>



